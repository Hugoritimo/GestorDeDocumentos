datasource db {
  provider = "postgresql"
  url      = "postgresql://USER:PASSWORD@localhost:5432/NOME_DO_BANCO"
}
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  documents Document[]
}

model Document {
  id         Int      @id @default(autoincrement())
  name       String
  path       String   // Caminho do arquivo no servidor
  uploadedBy User     @relation(fields: [userId], references: [id])
  userId     Int
}
